<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>CheckAppServlet</servlet-name>
        <servlet-class>com.bsu.testServlets.CheckAppServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckStatusServlet</servlet-name>
        <servlet-class>com.bsu.testServlets.CheckStatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUserNameServlet</servlet-name>
        <servlet-class>com.bsu.testServlets.GetUserNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>СheckSessionServlet</servlet-name>
        <servlet-class>com.bsu.testServlets.CheckSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPageServlet</servlet-name>
        <servlet-class>com.bsu.testServlets.GetPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FirstTestServlet</servlet-name>
        <servlet-class>com.bsu.testServlets.FirstTestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SecondTestServlet</servlet-name>
        <servlet-class>com.bsu.testServlets.SecondTestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PhotoPostServlet</servlet-name>
        <servlet-class>com.bsu.servlet.PhotoPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PhotoPostsServlet</servlet-name>
        <servlet-class>com.bsu.servlet.PhotoPostsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.bsu.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LikeServlet</servlet-name>
        <servlet-class>com.bsu.servlet.LikeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CheckAppServlet</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckStatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserNameServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>СheckSessionServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPageServlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FirstTestServlet</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecondTestServlet</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PhotoPostServlet</servlet-name>
        <url-pattern>/photo-post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PhotoPostsServlet</servlet-name>
        <url-pattern>/photo-posts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LikeServlet</servlet-name>
        <url-pattern>/like</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>ShowInfoFilter</filter-name>
        <filter-class>com.bsu.filter.ShowInfoFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>ShowInfoFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>